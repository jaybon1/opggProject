<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    tools:context=".CommunityActivity">

    <include layout="@layout/community_toolbar"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp">

        <ImageView
            android:id="@+id/btn_search_gray"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/btn_edit_mint"
            app:srcCompat="@drawable/ic_search_gray" />

        <ImageView
            android:id="@+id/btn_edit_mint"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/ic_edit_mint" />

    </RelativeLayout>

        <include layout="@layout/activity_community_item" />
        <include layout="@layout/activity_community_item" />
        <include layout="@layout/activity_community_item" />
        <include layout="@layout/activity_community_item" />




</LinearLayout>